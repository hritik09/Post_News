<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.label :content %>
    <%= f.text_area :content, placeholder: "Compose new post..." %>

    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
